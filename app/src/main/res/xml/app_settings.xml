<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.drnoob.datamonitor.core.base.PreferenceCategory
        android:title="@string/settings_appearance"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false">

        <com.drnoob.datamonitor.core.base.Preference
            android:icon="@drawable/ic_app_theme"
            android:key="app_theme"
            android:title="@string/settings_app_theme"
            app:summary="Following system theme"
            android:widgetLayout="@layout/preference_right_arrow" />

    </com.drnoob.datamonitor.core.base.PreferenceCategory>

    <com.drnoob.datamonitor.core.base.PreferenceCategory
        android:title="@string/settings_preferences"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false">
        <com.drnoob.datamonitor.core.base.Preference
            android:icon="@drawable/ic_language"
            android:key="language_picker"
            android:title="@string/settings_language"
            app:summary="@string/language_summary"
            android:widgetLayout="@layout/preference_right_arrow" />
        

    </com.drnoob.datamonitor.core.base.PreferenceCategory>

</PreferenceScreen>